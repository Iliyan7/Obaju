@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li>@ViewData["Title"]</li>
        </ul>
    </div>

    <div class="col-md-3">
        <div class="panel panel-default sidebar-menu">
            <div class="panel-heading">
                <h3 class="panel-title">Pages</h3>
            </div>

            <div class="panel-body">
                <ul class="nav nav-pills nav-stacked">
                    <li><a asp-page="About">About us</a></li>
                    <li><a asp-page="Contact">Contact us</a></li>
                    <li><a asp-page="Faq">FAQ</a></li>
                    <li><a asp-page="Terms">Terms and Conditions</a></li>
                </ul>
            </div>
        </div>
        <div class="banner">
            <a href="#"><img src="~/images/banner.jpg" alt="sales 2014" class="img-responsive"></a>
        </div>
    </div>

    <div class="col-md-9">
        @RenderBody()
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
